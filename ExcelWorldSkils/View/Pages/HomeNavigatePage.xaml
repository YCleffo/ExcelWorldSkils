<Page x:Class="ExcelWorldSkils.View.Pages.HomeNavigatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelWorldSkils.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Выберите действие">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Добавить студента" Padding="7" FontSize="16" x:Name="AddStudent" Click="AddStudent_Click" Margin="5"/>
            <Button Content="Добавить оценку" Padding="7" FontSize="16" x:Name="AddGrade" Click="AddGrade_Click" Margin="5"/>
            <Button Content="Список студентов" Padding="7" FontSize="16" x:Name="ListStudent" Click="ListStudent_Click" Margin="5"/>
            <Button Content="Редактировать оценки" Padding="7" FontSize="16" x:Name="EditGrade" Click="EditGrade_Click" Margin="5"/>
            <Button Content="Удалить студента" Padding="7" FontSize="16" x:Name="DeletStudent" Click="DeletStudent_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
