<Page x:Class="ExcelWorldSkils.Model.Frame.AutchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExcelWorldSkils.Model.Frame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel VerticalAlignment="Center" Width="300" HorizontalAlignment="Center">
            <UniformGrid Columns="2">
                 <TextBlock Text="Логин"  Margin="6" FontSize="16"/>
                <TextBox x:Name="LogInTextBox" Height="20"/>
            </UniformGrid>
            <UniformGrid Columns="2">
                <TextBlock Text="Пароль" Margin="6" FontSize="16"/>
                <TextBox x:Name="PasswordTextBox" Height="20"/>
            </UniformGrid>
            <UniformGrid Columns="2">
                <Button x:Name="AutchBtn" Click="AutchBtnClick" Content="Войти" Width="140"/>
                <Button x:Name="RegBtn" Click="RegBtn_Click" Content="Зарегестрироваться" Width="140"/>
            </UniformGrid>
        </StackPanel>
    </Grid>
</Page>
